@model IEnumerable<WebXeHoi.Models.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <p>
                <a class="btn btn-primary" asp-action="Create">Thêm sản phẩm mới</a>
            </p>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Tên</th>
                        <th>Giá</th>
                        <th>Mô tả</th>
                        <th>Hình ảnh</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Price $</td>
                            <td>@item.Description</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" width="100px" class="img-thumbnail" alt="Hình ảnh sản phẩm">
                                }
                            </td>
                            <td>
                                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Chi tiết</a>
                                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Chỉnh sửa</a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
