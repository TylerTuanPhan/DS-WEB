@{
    ViewData["Title"] = "Liên hệ";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #333;
            text-align: center;
            font-size: 36px; /* Kích thước font chữ 36px */
        }

        p {
            margin-bottom: 20px;
            font-size: 20px; /* Kích thước font chữ 20px */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>
        <p>Nếu có bất kỳ thắc mắc nào, vui lòng liên hệ số điện thoại <strong>0866841060</strong>.</p>
    </div>
</body>
</html>
