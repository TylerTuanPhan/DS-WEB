@model ShoppingCart
<h2>Giỏ hàng của bạn</h2>
<table class="table">
	<tr>
		<th>Product</th>
		<th>Quantity</th>
		<th>Price</th>
		<th>Total</th>
	</tr>
	@foreach (var item in Model.Items)
	{
	<tr>
	<td>@item.Name</td>
	<td>
		<form asp-controller="ShoppingCart" asp-action="UpdateQuantity" method="post">
					<input type="hidden" name="productId" value="@item.ProductId" />
					<label for="quantity">Số lượng</label>
					<input type="number" id="quantity" name="quantity" value="@item.Quantity" />
					<button class="btn btn-primary" type="submit">Cập nhật</button>	
		</form>
	</td>
	<td>@item.Price</td>
	<td>@(item.Price * item.Quantity)</td>
		<td>
			<a asp-action="RemoveFromCart" asp-route-productId="@item.ProductId">Xóa</a>

		</td>
	</tr>
	}
</table>
<div style="display: flex">
	<a asp-action="Checkout" asp-controller="ShoppingCart">Tiến hành đặt hàng</a>
</div>